<% content_for :title, @paciente.nome.present? ? @paciente.nome : "Detalhes do Paciente" %>

<div class="container-xl py-4">
  <% if notice.present? %>
    <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
      <i class="fas fa-check-circle me-2"></i>
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <section class="page-hero">
    <div class="row g-4 align-items-center">
      <div class="col-lg-9">
        <span class="hero-badge">
          <i class="fas fa-notes-medical"></i>
          Prontu√°rio Santa Casa
        </span>
        <h1 class="display-6 fw-semibold mt-3 mb-2"><%= @paciente.nome.presence || "Paciente sem nome cadastrado" %></h1>
        <p class="mb-0">
          Dados assistenciais consolidados para a equipe do Hospital Santa Casa de Ji-Paran√°.
          Mantenha as informa√ß√µes atualizadas para garantir atendimento seguro e humanizado.
        </p>
      </div>
      <div class="col-lg-3 text-lg-end">
        <div class="d-grid gap-2">
          <%= link_to edit_paciente_path(@paciente), class: "btn btn-light fw-semibold" do %>
            <i class="fas fa-edit me-2"></i> Atualizar dados
          <% end %>
          <%= link_to pacientes_path, class: "btn btn-outline-light fw-semibold" do %>
            <i class="fas fa-list me-2"></i> Voltar para lista
          <% end %>
        </div>
      </div>
    </div>
  </section>

  <div class="row g-3 mb-4">
    <div class="col-md-4">
      <div class="card metrics-card h-100">
        <div class="card-body">
          <p class="text-uppercase text-muted small fw-semibold mb-1">Idade estimada</p>
          <div class="metric-value">
            <% if @paciente.data_nascimento.present? %>
              <% idade = ((Time.zone.now - @paciente.data_nascimento.to_time) / 1.year.seconds).floor %>
              <%= idade %> anos
            <% else %>
              <span class="text-muted small">N√£o informada</span>
            <% end %>
          </div>
          <p class="mb-0 text-muted small">
            Nascido em <%= @paciente.data_nascimento.present? ? @paciente.data_nascimento.strftime("%d/%m/%Y") : "data n√£o cadastrada" %>
          </p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card metrics-card h-100">
        <div class="card-body">
          <p class="text-uppercase text-muted small fw-semibold mb-1">Contato principal</p>
          <div class="metric-value">
            <%= @paciente.celular.presence || content_tag(:span, "N√£o informado", class: "text-muted small") %>
          </div>
          <p class="mb-0 text-muted small">
            <%= @paciente.email.present? ? @paciente.email : "E-mail n√£o cadastrado" %>
          </p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card metrics-card h-100">
        <div class="card-body">
          <p class="text-uppercase text-muted small fw-semibold mb-1">Status do cadastro</p>
          <div class="metric-value text-success">
            <i class="fas fa-check-circle me-2"></i> Ativo
          </div>
          <p class="mb-0 text-muted small">
            Atualizado em <%= l(Time.zone.now, format: "%d/%m/%Y") %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="card shadow-sm border-0">
    <div class="card-header bg-white border-0 pb-0">
      <span class="section-title">
        <i class="fas fa-user"></i> Perfil completo
      </span>
    </div>

    <div class="card-body">
      <% placeholder = content_tag(:span, "N√£o informado", class: "text-muted") %>

      <!-- üßç Dados Pessoais -->
      <section class="mb-4">
        <span class="section-title mb-3">
          <i class="fas fa-id-card"></i> Dados pessoais
        </span>
        <dl class="row mb-0 detail-list">
          <dt class="col-sm-4 text-secondary small text-uppercase">Nome completo</dt>
          <dd class="col-sm-8 mb-2"><strong><%= @paciente.nome.presence || placeholder %></strong></dd>

          <dt class="col-sm-4 text-secondary small text-uppercase">Nome social</dt>
          <dd class="col-sm-8 mb-2"><%= @paciente.nome_social.presence || placeholder %></dd>

          <dt class="col-sm-4 text-secondary small text-uppercase">Sexo</dt>
          <dd class="col-sm-8 mb-2">
            <% if @paciente.sexo.present? %>
              <% sexo_badge = case @paciente.sexo
                              when "masculino" then "primary"
                              when "feminino" then "danger"
                              else "secondary"
                              end %>
              <span class="badge bg-<%= sexo_badge %> px-2 py-2"><%= @paciente.sexo.capitalize %></span>
            <% else %>
              <%= placeholder %>
            <% end %>
          </dd>

          <dt class="col-sm-4 text-secondary small text-uppercase">Ra√ßa/Cor</dt>
          <dd class="col-sm-8 mb-2"><%= @paciente.raca.presence || placeholder %></dd>

          <dt class="col-sm-4 text-secondary small text-uppercase">Data de nascimento</dt>
          <dd class="col-sm-8 mb-2">
            <% if @paciente.data_nascimento.present? %>
              <%= @paciente.data_nascimento.strftime("%d/%m/%Y") %>
              <% idade = ((Time.zone.now - @paciente.data_nascimento.to_time) / 1.year.seconds).floor %>
              <span class="text-muted">(<%= idade %> anos)</span>
            <% else %>
              <%= placeholder %>
            <% end %>
          </dd>

          <dt class="col-sm-4 text-secondary small text-uppercase">Estado civil</dt>
          <dd class="col-sm-8 mb-2"><%= @paciente.estado_civil.presence || placeholder %></dd>

          <dt class="col-sm-4 text-secondary small text-uppercase">Profiss√£o</dt>
          <dd class="col-sm-8 mb-2"><%= @paciente.profissao.presence || placeholder %></dd>

          <dt class="col-sm-4 text-secondary small text-uppercase">Escolaridade</dt>
          <dd class="col-sm-8"><%= @paciente.escolaridade.presence || placeholder %></dd>
        </dl>
      </section>

      <!-- üìÑ Documentos -->
      <section class="mb-4">
        <span class="section-title mb-3">
          <i class="fas fa-file-alt"></i> Documentos
        </span>
        <dl class="row mb-0 detail-list">
          <dt class="col-sm-4 text-secondary small text-uppercase">CPF</dt>
          <dd class="col-sm-8 mb-2"><%= @paciente.cpf.presence || placeholder %></dd>

          <dt class="col-sm-4 text-secondary small text-uppercase">RG</dt>
          <dd class="col-sm-8 mb-2"><%= @paciente.rg.presence || placeholder %></dd>

          <dt class="col-sm-4 text-secondary small text-uppercase">Org√£o expedidor</dt>
          <dd class="col-sm-8 mb-2"><%= @paciente.org_exp.presence || placeholder %></dd>

          <dt class="col-sm-4 text-secondary small text-uppercase">Cart√£o SUS</dt>
          <dd class="col-sm-8"><%= @paciente.cartao_sus.presence || placeholder %></dd>
        </dl>
      </section>

      <!-- üåç Outras Informa√ß√µes -->
      <section>
        <span class="section-title mb-3">
          <i class="fas fa-globe"></i> Outras informa√ß√µes
        </span>
        <dl class="row mb-0 detail-list">
          <dt class="col-sm-4 text-secondary small text-uppercase">Nacionalidade</dt>
          <dd class="col-sm-8 mb-2"><%= @paciente.nacionalidade.presence || placeholder %></dd>

          <dt class="col-sm-4 text-secondary small text-uppercase">Naturalidade</dt>
          <dd class="col-sm-8 mb-2"><%= @paciente.naturalidade.presence || placeholder %></dd>

          <dt class="col-sm-4 text-secondary small text-uppercase">Nome da m√£e</dt>
          <dd class="col-sm-8 mb-2"><%= @paciente.nome_mae.presence || placeholder %></dd>

          <dt class="col-sm-4 text-secondary small text-uppercase">Celular</dt>
          <dd class="col-sm-8 mb-2"><%= @paciente.celular.presence || placeholder %></dd>

          <dt class="col-sm-4 text-secondary small text-uppercase">E-mail</dt>
          <dd class="col-sm-8 mb-2">
            <%= @paciente.email.present? ? mail_to(@paciente.email) : placeholder %>
          </dd>

          <dt class="col-sm-4 text-secondary small text-uppercase">Hor√°rio</dt>
          <dd class="col-sm-8 mb-3">
            <% if @paciente.horario.present? %>
              <%= @paciente.horario.respond_to?(:strftime) ? @paciente.horario.strftime("%H:%M") : @paciente.horario %>
            <% else %>
              <%= placeholder %>
            <% end %>
          </dd>

          <dt class="col-sm-4 text-secondary small text-uppercase">Observa√ß√µes</dt>
          <dd class="col-sm-8">
            <div class="list-box">
              <%= @paciente.observacao.present? ? simple_format(@paciente.observacao, {}, wrapper_tag: "span") : placeholder %>
            </div>
          </dd>
        </dl>
      </section>
    </div>

    <div class="card-footer bg-light text-end">
      <%= button_to @paciente, method: :delete,
          data: { turbo_confirm: "Tem certeza que deseja excluir este paciente?" },
          class: "btn btn-danger" do %>
        <i class="fas fa-trash me-1"></i> Excluir Paciente
      <% end %>
    </div>
  </div>
</div>
