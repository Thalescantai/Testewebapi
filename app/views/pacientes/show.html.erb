<div class="container mt-4">
  <% if notice.present? %>
    <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
      <i class="fas fa-check-circle me-2"></i>
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <div class="card shadow-sm border-0">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
      <h4 class="mb-0 fw-semibold">
        <i class="fas fa-user me-2"></i> Dados do Paciente
      </h4>

      <div>
        <%= link_to edit_paciente_path(@paciente), class: "btn btn-sm btn-light text-primary me-2" do %>
          <i class="fas fa-edit me-1"></i> Editar
        <% end %>

        <%= link_to pacientes_path, class: "btn btn-sm btn-outline-light" do %>
          <i class="fas fa-arrow-left me-1"></i> Voltar
        <% end %>
      </div>
    </div>

    <div class="card-body">
      <!-- üßç Dados Pessoais -->
      <h5 class="text-primary fw-bold mb-3">
        <i class="fas fa-id-card me-1"></i> Dados Pessoais
      </h5>
      <div class="row g-3">
        <div class="col-md-4"><strong>Nome:</strong> <%= @paciente.nome %></div>
        <div class="col-md-4"><strong>Nome Social:</strong> <%= @paciente.nome_social %></div>
        <div class="col-md-2"><strong>Sexo:</strong> <%= @paciente.sexo&.capitalize %></div>
        <div class="col-md-2"><strong>Ra√ßa:</strong> <%= @paciente.raca %></div>
        <div class="col-md-3"><strong>Data Nasc.:</strong> <%= @paciente.data_nascimento&.strftime("%d/%m/%Y") %></div>
        <div class="col-md-3"><strong>Profiss√£o:</strong> <%= @paciente.profissao %></div>
        <div class="col-md-3"><strong>Escolaridade:</strong> <%= @paciente.escolaridade %></div>
        <div class="col-md-3"><strong>Estado Civil:</strong> <%= @paciente.estado_civil %></div>
      </div>

      <!-- üìÑ Documentos -->
      <h5 class="text-primary fw-bold mb-3 mt-4">
        <i class="fas fa-file-alt me-1"></i> Documentos
      </h5>
      <div class="row g-3">
        <div class="col-md-3"><strong>CPF:</strong> <%= @paciente.cpf %></div>
        <div class="col-md-3"><strong>RG:</strong> <%= @paciente.rg %></div>
        <div class="col-md-3"><strong>Org. Exp.:</strong> <%= @paciente.org_exp %></div>
        <div class="col-md-3"><strong>Cart√£o SUS:</strong> <%= @paciente.cartao_sus %></div>
      </div>

      <!-- üåç Outras Informa√ß√µes -->
      <h5 class="text-primary fw-bold mb-3 mt-4">
        <i class="fas fa-globe me-1"></i> Outras Informa√ß√µes
      </h5>
      <div class="row g-3">
        <div class="col-md-3"><strong>Nacionalidade:</strong> <%= @paciente.nacionalidade %></div>
        <div class="col-md-3"><strong>Naturalidade:</strong> <%= @paciente.naturalidade %></div>
        <div class="col-md-6"><strong>Nome da M√£e:</strong> <%= @paciente.nome_mae %></div>
        <div class="col-md-3"><strong>Celular:</strong> <%= @paciente.celular %></div>
        <div class="col-md-4"><strong>Email:</strong> <%= @paciente.email %></div>
        <div class="col-md-2"><strong>Hor√°rio:</strong> <%= @paciente.horario %></div>
        <div class="col-12">
          <strong>Observa√ß√µes:</strong>
          <div class="border rounded p-2 bg-light mt-1">
            <%= @paciente.observacao.presence || "<span class='text-muted'>Sem observa√ß√µes</span>".html_safe %>
          </div>
        </div>
      </div>
    </div>

    <div class="card-footer bg-light text-end">
      <%= button_to @paciente, method: :delete,
          data: { turbo_confirm: "Tem certeza que deseja excluir este paciente?" },
          class: "btn btn-danger" do %>
        <i class="fas fa-trash me-1"></i> Excluir Paciente
      <% end %>
    </div>
  </div>
</div>
