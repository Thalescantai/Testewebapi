<% content_for :title, "Modulo S.U.S" %>

<div class="container-xl py-4">
  <% total_registros = @pacientes.respond_to?(:total_count) ? @pacientes.total_count : @pacientes.size %>

  <section class="page-hero">
    <div class="row g-4 align-items-center">
      <div class="col-lg-8">
        <span class="hero-badge">
          <i class="fas fa-hospital"></i>
          Santa Casa de Ji-Paran√°
        </span>
        <h1 class="display-6 fw-semibold mt-3 mb-2">Central de Pacientes</h1>
        <p class="mb-0 fs-6">
          Acompanhe os cadastros, atualize informa√ß√µes e mantenha os dados cl√≠nicos organizados
          para toda a equipe assistencial da Santa Casa.
        </p>
      </div>
      <div class="col-lg-4 text-lg-end">
        <%= link_to new_paciente_path, class: "btn btn-light btn-lg shadow-sm fw-semibold" do %>
          <i class="fas fa-user-plus me-2"></i> Novo cadastro
        <% end %>
      </div>
    </div>
  </section>

  <div class="row g-3 mb-4">
    <div class="col-md-4">
      <div class="card metrics-card h-100">
        <div class="card-body">
          <% consultas_hoje = @consultas_hoje_count.to_i %>
          <p class="text-uppercase text-muted small fw-semibold mb-1">Consultas de hoje</p>
          <div class="metric-value d-flex align-items-baseline gap-2">
            <span><%= consultas_hoje %></span>
            <span class="fs-6 text-muted">
              paciente<%= "s" unless consultas_hoje == 1 %>
            </span>
          </div>
          <p class="mb-0 text-muted small">
            <%= consultas_hoje.positive? ? "Agendados para atendimento" : "Nenhuma consulta agendada hoje" %>
          </p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      
    </div>
  </div>

  <!-- üîç Filtros de Busca -->
  <div style="margin-bottom: 1.5rem; border: 1px solid #e4e7ef; border-radius: 12px; background: #fff; box-shadow: 0 2px 6px rgba(15, 23, 42, 0.05);">
    <div style="display: flex; justify-content: space-between; align-items: center; padding: 1rem 1.35rem; background: #f4f6fb; border-bottom: 1px solid #e4e7ef; border-top-left-radius: 12px; border-top-right-radius: 12px;">
      <span style="font-weight: 600; color: #1f2937; letter-spacing: 0.06em; text-transform: uppercase; font-size: 0.85rem; display: inline-flex; align-items: center; gap: 0.5rem;">
        <i class="fas fa-search" style="color: #2563eb;"></i>
        Filtros de busca
      </span>
      <% if params[:q].present? %>
        <span style="font-size: 0.85rem; color: #2563eb; font-weight: 600;">
          <%= pluralize(total_registros, "resultado", plural: "resultados") %>
        </span>
      <% else %>
        <span style="font-size: 0.85rem; color: #6b7280;">Mostrando registros recentes</span>
      <% end %>
    </div>
    <div style="padding: 1.35rem;">
      <%= search_form_for @q, url: pacientes_path, method: :get, html: { style: "display: flex; flex-wrap: wrap; gap: 1rem; align-items: flex-end;" } do |f| %>
        <div style="flex: 1 1 280px;">
          <%= f.label :nome_cont, "Nome", style: "display: block; font-size: 0.75rem; font-weight: 600; color: #6b7280; text-transform: uppercase; letter-spacing: 0.05em; margin-bottom: 0.35rem;" %>
          <%= f.search_field :nome_cont, placeholder: "Digite o nome completo ou parcial", class: "form-control", style: "width: 100%; border: 1px solid #e4e7ef; border-radius: 8px; padding: 0.7rem 0.9rem; font-size: 0.95rem; color: #1f2937;" %>
        </div>

        <div style="flex: 1 1 220px;">
          <%= f.label :cpf_cont, "CPF", style: "display: block; font-size: 0.75rem; font-weight: 600; color: #6b7280; text-transform: uppercase; letter-spacing: 0.05em; margin-bottom: 0.35rem;" %>
          <%= f.search_field :cpf_cont,
                              placeholder: "000.000.000-00",
                              class: "form-control",
                              style: "width: 100%; border: 1px solid #e4e7ef; border-radius: 8px; padding: 0.7rem 0.9rem; font-size: 0.95rem; color: #1f2937;",
                              data: { controller: "cpf-mask", action: "input->cpf-mask#format blur->cpf-mask#format" } %>
        </div>

        <div style="flex: 1 1 240px;">
          <%= f.label :email_cont, "E-mail", style: "display: block; font-size: 0.75rem; font-weight: 600; color: #6b7280; text-transform: uppercase; letter-spacing: 0.05em; margin-bottom: 0.35rem;" %>
          <%= f.search_field :email_cont, placeholder: "nome@hospital.com", class: "form-control", style: "width: 100%; border: 1px solid #e4e7ef; border-radius: 8px; padding: 0.7rem 0.9rem; font-size: 0.95rem; color: #1f2937;" %>
        </div>

        <div style="flex: 1 1 200px;">
          <%= f.label :sexo_eq, "Sexo", style: "display: block; font-size: 0.75rem; font-weight: 600; color: #6b7280; text-transform: uppercase; letter-spacing: 0.05em; margin-bottom: 0.35rem;" %>
          <%= f.select :sexo_eq,
                [["Masculino", "masculino"], ["Feminino", "feminino"], ["Indefinido", "indefinido"]],
                { include_blank: "Todos" },
                { style: "width: 100%; border: 1px solid #e4e7ef; border-radius: 8px; padding: 0.7rem 0.9rem; font-size: 0.95rem; color: #1f2937; background: #fff;" } %>
        </div>

        <div style="flex-basis: 100%; display: flex; justify-content: space-between; align-items: center; margin-top: 0.5rem; gap: 1rem;">
          <div style="display: flex; gap: 0.75rem;">
            <%= f.submit "Aplicar filtros", style: "padding: 0.7rem 1.3rem; background: #2563eb; color: #fff; border: none; border-radius: 8px; font-weight: 600; letter-spacing: 0.03em; cursor: pointer;" %>
            <% if params[:q].present? %>
              <%= link_to "Limpar filtros", pacientes_path, style: "padding: 0.7rem 1.3rem; border: 1px solid #e4e7ef; border-radius: 8px; font-weight: 600; letter-spacing: 0.03em; color: #4b5563; text-decoration: none;" %>
            <% end %>
          </div>
          <% if params[:q].present? %>
            <span style="font-size: 0.8rem; color: #6b7280; display: inline-flex; align-items: center; gap: 0.35rem;">
              <i class="fas fa-info-circle"></i>
              Resultados refinados pelos filtros selecionados
            </span>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- üìã Tabela -->
  <div class="card border-0 shadow-sm">
    <div class="card-header bg-white border-0 pb-0">
      <span class="section-title">
        <i class="fas fa-list-ul"></i> Registros encontrados
      </span>
    </div>
    <div style="overflow-x: auto;">
      <table style="width: 100%; border-collapse: collapse; font-size: 0.95rem; background: #fff; box-shadow: 0 2px 6px rgba(0,0,0,0.04);">
        <thead>
          <tr style="background: #f4f6fb; text-transform: uppercase; letter-spacing: 0.04em; color: #52606d;">
            <th style="border: 1px solid #e4e7ef; padding: 0.85rem; text-align: left; min-width: 180px;">
              <%= sort_link(@q, :nome, "Nome", class: "text-decoration-none text-reset", style: "color: inherit; font-weight: 600;") %>
            </th>
            <th style="border: 1px solid #e4e7ef; padding: 0.85rem; text-align: left; min-width: 120px;">CPF</th>
            <th style="border: 1px solid #e4e7ef; padding: 0.85rem; text-align: center; min-width: 120px;">Sexo</th>
            <th style="border: 1px solid #e4e7ef; padding: 0.85rem; text-align: center; min-width: 90px;">Idade</th>
            <th style="border: 1px solid #e4e7ef; padding: 0.85rem; text-align: left; min-width: 180px;">Email</th>
            <th style="border: 1px solid #e4e7ef; padding: 0.85rem; text-align: left; min-width: 140px;">Celular</th>
            <th style="border: 1px solid #e4e7ef; padding: 0.85rem; text-align: center; min-width: 120px;">Data Nasc.</th>
            <th style="border: 1px solid #e4e7ef; padding: 0.85rem; text-align: left; min-width: 200px;">Observa√ß√µes</th>
            <th style="border: 1px solid #e4e7ef; padding: 0.85rem; text-align: center; width: 200px;">A√ß√µes</th>
          </tr>
        </thead>

        <tbody>
          <% if @pacientes.any? %>
            <% @pacientes.each do |paciente| %>
              <% idade = if paciente.data_nascimento.present?
                           ((Time.zone.now - paciente.data_nascimento.to_time) / 1.year.seconds).floor
                         end %>
              <% sexo_label, sexo_color = case paciente.sexo
                when "masculino" then ["Masculino", "#2563eb"]
                when "feminino" then ["Feminino", "#d946ef"]
                when "indefinido" then ["Indefinido", "#64748b"]
                else [nil, nil]
              end %>
              <tr style="border-bottom: 1px solid #eef1f7;">
                <td style="border: 1px solid #e4e7ef; padding: 0.85rem;">
                  <div style="display: flex; align-items: center; gap: 0.6rem;">
                    <span style="display: inline-flex; align-items: center; justify-content: center; width: 32px; height: 32px; border-radius: 50%; background: #e3edff; color: #2d6cdf;">
                      <i class="fas fa-user-md"></i>
                    </span>
                    <div>
                      <div style="font-weight: 600; color: #1f2937;"><%= paciente.nome %></div>
                      <div style="font-size: 0.75rem; color: #6b7280;"><%= paciente.email.presence || "Email n√£o informado" %></div>
                    </div>
                  </div>
                </td>
                <td style="border: 1px solid #e4e7ef; padding: 0.85rem; color: #374151;"><%= paciente.cpf.presence || "‚Äî" %></td>
                <td style="border: 1px solid #e4e7ef; padding: 0.85rem; text-align: center;">
                  <% if sexo_label.present? %>
                    <span style="display: inline-block; padding: 0.35rem 0.85rem; border-radius: 999px; background: <%= sexo_color %>; color: #fff; font-size: 0.75rem; font-weight: 600;">
                      <%= sexo_label %>
                    </span>
                  <% else %>
                    ‚Äî
                  <% end %>
                </td>
                <td style="border: 1px solid #e4e7ef; padding: 0.85rem; text-align: center;">
                  <%= idade.present? ? "#{idade} anos" : "‚Äî" %>
                </td>
                <td style="border: 1px solid #e4e7ef; padding: 0.85rem; color: #374151;"><%= paciente.email.presence || "‚Äî" %></td>
                <td style="border: 1px solid #e4e7ef; padding: 0.85rem; color: #374151;"><%= paciente.celular.presence || "‚Äî" %></td>
                <td style="border: 1px solid #e4e7ef; padding: 0.85rem; text-align: center;"><%= paciente.data_nascimento&.strftime("%d/%m/%Y") || "‚Äî" %></td>
                <td style="border: 1px solid #e4e7ef; padding: 0.85rem; color: #4b5563;">
                  <%= paciente.observacao.present? ? truncate(paciente.observacao, length: 50) : "‚Äî" %>
                </td>
                <td style="border: 1px solid #e4e7ef; padding: 0.85rem; text-align: center;">
                  <%= link_to "Visualizar", paciente, style: "margin-right: 0.65rem; color: #2563eb; text-decoration: none; font-weight: 600;" %>
                  <%= link_to "Editar", edit_paciente_path(paciente), style: "margin-right: 0.65rem; color: #16a34a; text-decoration: none; font-weight: 600;" %>
                  <%= button_to "Excluir",
                        paciente,
                        method: :delete,
                        data: { turbo_confirm: "Deseja realmente excluir #{paciente.nome}?" },
                        form: { style: "display: inline;" },
                        style: "background: transparent; border: none; color: #dc2626; cursor: pointer; font-weight: 600; text-decoration: underline;" %>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="9" style="padding: 1.25rem; text-align: center; color: #6b7280;">
                <i class="fas fa-info-circle me-2"></i>
                Nenhum paciente encontrado para os filtros aplicados.
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- üìÑ Pagina√ß√£o -->
  <div class="mt-4 d-flex justify-content-center">
    <%= paginate @pacientes %>
  </div>
</div>

<!-- üß† Tooltip Bootstrap -->
<script>
  document.addEventListener("turbo:load", function() {
    const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
    tooltipTriggerList.map(function (tooltipTriggerEl) {
      return new bootstrap.Tooltip(tooltipTriggerEl)
    })
  })
</script>
