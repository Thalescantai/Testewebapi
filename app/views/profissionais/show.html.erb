<% content_for :title, @profissional.nome %>

<div class="container-xl py-4">
  <% if notice.present? %>
    <div style="margin-bottom: 1rem; padding: 0.85rem 1rem; border-radius: 10px; background: #ecfdf5; color: #047857; border: 1px solid #a7f3d0; font-weight: 600;">
      <i class="fas fa-check-circle me-1"></i>
      <%= notice %>
    </div>
  <% end %>

  <section style="margin-bottom: 2rem;">
    <div style="display: flex; flex-wrap: wrap; gap: 1.5rem; align-items: center; justify-content: space-between;">
      <div style="flex: 1 1 340px;">
        <span style="display: inline-flex; align-items: center; gap: 0.5rem; padding: 0.35rem 0.75rem; border-radius: 999px; background: #e3edff; color: #2563eb; font-weight: 600; font-size: 0.85rem;">
          <i class="fas fa-user-md"></i>
          Profissional da Santa Casa
        </span>
        <h1 style="margin: 1rem 0 0.3rem; font-size: 2.25rem; font-weight: 600; color: #1f2937;">
          <%= @profissional.nome %>
        </h1>
        <p style="margin: 0; color: #6b7280; font-size: 1rem;">
          <%= Profissional::ROLE_LABELS[@profissional.cargo] || @profissional.cargo.titleize %>
          <% if @profissional.cargo_medico? && @profissional.crm.present? %>
            · CRM <%= @profissional.crm %>
          <% end %>
        </p>
      </div>
      <div style="display: flex; gap: 0.75rem; flex: 0 0 auto;">
        <%= link_to edit_profissional_path(@profissional),
            style: "display: inline-flex; align-items: center; gap: 0.45rem; padding: 0.75rem 1.1rem; border: 1px solid #2563eb; border-radius: 10px; font-weight: 600; color: #2563eb; text-decoration: none; background: rgba(37,99,235,0.08);" do %>
          <i class="fas fa-edit"></i>
          Editar cadastro
        <% end %>
        <%= button_to "Remover", @profissional,
              method: :delete,
              data: { turbo_confirm: "Deseja realmente remover #{@profissional.nome}?" },
              form: { style: "display: inline;" },
              style: "display: inline-flex; align-items: center; gap: 0.45rem; padding: 0.75rem 1.1rem; border: 1px solid #dc2626; border-radius: 10px; font-weight: 600; color: #dc2626; background: rgba(220,38,38,0.06); cursor: pointer;" %>
      </div>
    </div>
  </section>

  <div style="border: 1px solid #e4e7ef; border-radius: 12px; background: #fff; box-shadow: 0 2px 6px rgba(15,23,42,0.05); overflow: hidden;">
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(240px, 1fr)); gap: 1px; background: #e4e7ef;">
      <div style="padding: 1.25rem 1.5rem; background: #fff;">
        <div style="font-size: 0.75rem; font-weight: 600; text-transform: uppercase; letter-spacing: 0.05em; color: #9ca3af;">Email</div>
        <div style="margin-top: 0.4rem; font-size: 1rem; color: #1f2937;">
          <%= @profissional.email.presence || "Não informado" %>
        </div>
      </div>
      <div style="padding: 1.25rem 1.5rem; background: #fff;">
        <div style="font-size: 0.75rem; font-weight: 600; text-transform: uppercase; letter-spacing: 0.05em; color: #9ca3af;">Telefone</div>
        <div style="margin-top: 0.4rem; font-size: 1rem; color: #1f2937;">
          <%= @profissional.telefone.presence || "Não informado" %>
        </div>
      </div>
      <div style="padding: 1.25rem 1.5rem; background: #fff;">
        <div style="font-size: 0.75rem; font-weight: 600; text-transform: uppercase; letter-spacing: 0.05em; color: #9ca3af;">CPF</div>
        <div style="margin-top: 0.4rem; font-size: 1rem; color: #1f2937;">
          <%= @profissional.cpf.presence || "Não informado" %>
        </div>
      </div>
      <div style="padding: 1.25rem 1.5rem; background: #fff;">
        <div style="font-size: 0.75rem; font-weight: 600; text-transform: uppercase; letter-spacing: 0.05em; color: #9ca3af;">Cargo</div>
        <div style="margin-top: 0.4rem; font-size: 1rem; color: #2563eb; font-weight: 600;">
          <%= Profissional::ROLE_LABELS[@profissional.cargo] || @profissional.cargo.titleize %>
        </div>
      </div>
      <% if @profissional.cargo_medico? %>
        <div style="padding: 1.25rem 1.5rem; background: #fff;">
          <div style="font-size: 0.75rem; font-weight: 600; text-transform: uppercase; letter-spacing: 0.05em; color: #9ca3af;">CRM</div>
          <div style="margin-top: 0.4rem; font-size: 1rem; color: #1f2937;">
            <%= @profissional.crm.presence || "Não informado" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div style="margin-top: 2rem;">
    <%= link_to profissionais_path,
        style: "display: inline-flex; align-items: center; gap: 0.5rem; font-weight: 600; color: #2563eb; text-decoration: none;" do %>
      <i class="fas fa-angle-left"></i>
      Voltar para profissionais
    <% end %>
  </div>
</div>
