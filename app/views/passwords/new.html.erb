<% content_for :title, "Recuperar senha" %>
<% content_for :body_class, "auth-page" %>

<div style="min-height: 100vh; display: flex; align-items: center; justify-content: center; padding: 2rem; background: linear-gradient(135deg, #0f172a, #4338ca);">
  <div style="width: 100%; max-width: 960px; display: grid; grid-template-columns: repeat(auto-fit, minmax(320px, 1fr)); gap: 2rem; background: rgba(15, 23, 42, 0.4); border-radius: 18px; overflow: hidden; box-shadow: 0 15px 45px rgba(15, 23, 42, 0.45);">
    <div style="background: rgba(15, 23, 42, 0.75); padding: 3rem; color: #f3f4f6; display: flex; flex-direction: column; justify-content: center;">
      <h2 style="margin: 0; font-size: 2rem; font-weight: 700;">
        Recuperação de acesso
      </h2>
      <p style="margin-top: 1rem; color: #cbd5f5; font-size: 0.95rem; line-height: 1.6;">
        Informe o CPF utilizado no cadastro. Validaremos as informações e retornaremos com as etapas necessárias para redefinir sua senha.
      </p>
    </div>

    <div style="background: #f8fafc; padding: 3rem;">
      <div style="margin-bottom: 1.5rem;">
        <h1 style="margin: 0; font-size: 1.75rem; font-weight: 700; color: #111827;">Esqueci minha senha</h1>
        <p style="margin: 0.35rem 0 0; color: #6b7280; font-size: 0.95rem;">
          O sistema enviará orientações ao responsável pelo seu cadastro.
        </p>
      </div>

      <%= form_with url: forgot_password_path, scope: :password, local: true, html: { style: "display: grid; gap: 1.15rem;" } do |form| %>
        <div>
          <label for="password_cpf" style="display: block; font-size: 0.75rem; font-weight: 600; color: #6b7280; text-transform: uppercase; letter-spacing: 0.05em; margin-bottom: 0.45rem;">
            CPF cadastrado
          </label>
          <%= form.text_field :cpf,
                              placeholder: "000.000.000-00",
                              inputmode: "numeric",
                              autocomplete: "username",
                              data: { controller: "cpf-mask", action: "input->cpf-mask#format blur->cpf-mask#format" },
                              style: "width: 100%; border: 1px solid #d1d5db; border-radius: 10px; padding: 0.85rem 1rem; font-size: 1rem; color: #111827; background: #fff;" %>
        </div>

        <%= form.submit "Enviar instruções", style: "padding: 0.85rem 1rem; border-radius: 10px; border: none; background: linear-gradient(135deg, #6366f1, #4f46e5); color: #fff; font-weight: 700; letter-spacing: 0.04em; cursor: pointer; box-shadow: 0 10px 25px rgba(79, 70, 229, 0.35);" %>
      <% end %>

      <div style="margin-top: 1.75rem;">
        <%= link_to "Voltar para o login", login_path, style: "font-size: 0.9rem; color: #2563eb; font-weight: 600; text-decoration: none;" %>
      </div>
    </div>
  </div>
</div>
