<% content_for :title, "Novo exame" %>

<div class="container-xl py-4">
  <section style="margin-bottom: 1.5rem;">
    <h1 style="margin: 0; font-size: 2rem; font-weight: 600; color: #1f2937;">Cadastrar exame</h1>
    <p style="margin: 0.4rem 0 0; color: #6b7280;">Associe o exame a uma consulta existente.</p>
  </section>

  <div style="border: 1px solid #e5e7eb; border-radius: 12px; background: #fff; box-shadow: 0 2px 6px rgba(15,23,42,0.08); padding: 1.5rem;">
    <%= render "form", exame: @exame, redirect_to_consulta: false %>
  </div>
</div>
