<%= form_with(model: consulta) do |form| %>
  <% if consulta.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(consulta.errors.count, "error") %> prohibited this consulta from being saved:</h2>

      <ul>
        <% consulta.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :medico_id, "Médico responsável", style: "display: block" %>
    <%= form.collection_select :medico_id, @medicos, :id, :nome, { include_blank: "Selecione..." }, { class: "select-medico" } %>
    <% if @medicos.empty? %>
      <small>Cadastre um profissional com cargo "Médico" para habilitar esta seleção.</small>
    <% end %>
  </div>

  <div>
    <%= form.label :data_hora, style: "display: block" %>
    <%= form.datetime_field :data_hora %>
  </div>

  <div>
    <%= form.label :tipo, style: "display: block" %>
    <%= form.text_field :tipo %>
  </div>

  <div>
    <%= form.label :anamnese, style: "display: block" %>
    <%= form.text_area :anamnese %>
  </div>

  <div>
    <%= form.label :diagnostico, style: "display: block" %>
    <%= form.text_area :diagnostico %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
