<div class="exame-fields" data-nested-form-target="item" style="margin-bottom: 1rem; border: 1px solid #e4e7ef; border-radius: 10px; padding: 1rem; background: #f9fafc; position: relative;">
  <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(220px, 1fr)); gap: 1rem;">
    <div>
      <%= f.label :nome_exame, "Nome do exame", style: "display: block; font-size: 0.75rem; font-weight: 600; color: #6b7280; text-transform: uppercase; letter-spacing: 0.05em; margin-bottom: 0.35rem;" %>
      <%= f.text_field :nome_exame, style: "width: 100%; border: 1px solid #d1d5db; border-radius: 8px; padding: 0.65rem 0.8rem; font-size: 0.95rem; color: #1f2937;" %>
    </div>
    <div>
      <%= f.label :data_exame, "Data do exame", style: "display: block; font-size: 0.75rem; font-weight: 600; color: #6b7280; text-transform: uppercase; letter-spacing: 0.05em; margin-bottom: 0.35rem;" %>
      <%= f.date_field :data_exame, style: "width: 100%; border: 1px solid #d1d5db; border-radius: 8px; padding: 0.65rem 0.8rem; font-size: 0.95rem; color: #1f2937;" %>
    </div>
    <div>
      <%= f.label :status, "Status", style: "display: block; font-size: 0.75rem; font-weight: 600; color: #6b7280; text-transform: uppercase; letter-spacing: 0.05em; margin-bottom: 0.35rem;" %>
      <%= f.select :status,
            Exame.status_options_for_select,
            {},
            style: "width: 100%; border: 1px solid #d1d5db; border-radius: 8px; padding: 0.65rem 0.8rem; font-size: 0.95rem; color: #1f2937; background: #fff;" %>
    </div>
  </div>

  <div style="margin-top: 1rem;">
    <%= f.label :observacao_exame, "Observações", style: "display: block; font-size: 0.75rem; font-weight: 600; color: #6b7280; text-transform: uppercase; letter-spacing: 0.05em; margin-bottom: 0.35rem;" %>
    <%= f.text_area :observacao_exame, style: "width: 100%; border: 1px solid #d1d5db; border-radius: 8px; padding: 0.8rem; font-size: 0.95rem; color: #1f2937; min-height: 80px;" %>
  </div>

  <%= f.hidden_field :_destroy, data: { nested_form_target: "destroyField" } %>

  <button type="button"
          data-action="click->nested-form#remove"
          style="position: absolute; top: 12px; right: 12px; border: none; background: transparent; color: #dc2626; font-weight: 600; cursor: pointer;">
    Remover
  </button>
</div>
