# ============================================
# 📦 Ruby on Rails - .gitignore otimizado
# ============================================

# ⚙️ Bundler
/.bundle
/vendor/bundle

# 🔐 Arquivos de ambiente (.env)
.env
.env.*
!.env.example
!.env.template
!.env*.erb

# 🪵 Logs e temporários
/log/*
/tmp/*
!/log/.keep
!/tmp/.keep

# 🧠 PID files
/tmp/pids/*
!/tmp/pids/
!/tmp/pids/.keep

# 💾 Arquivos de cache e upload local
/storage/*
!/storage/.keep
/tmp/storage/*
!/tmp/storage/
!/tmp/storage/.keep

# 🔧 Active Storage (arquivos de upload locais)
# Em produção normalmente são no S3/GCS, mas ignore locais
/public/uploads
/public/active_storage

# 🧩 Assets compilados
/public/assets
/public/packs
/public/packs-test
/node_modules
/yarn-error.log

# 🗄️ Banco de dados SQLite (dev/test)
*.sqlite3
*.sqlite3-journal

# 🔑 Chaves e credenciais sensíveis
/config/master.key
/config/credentials
